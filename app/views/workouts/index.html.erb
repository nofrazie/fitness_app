<% provide(:title, "Workouts") %>

<!-- MAIN PAGE CONTENT -->
<h1 class="page-header">Workouts</h1>

<%= link_to "Create New Workout", new_workout_path, class: "btn btn-primary" %>

<% if @workouts.any? %>
  <div class="workouts">
    <ul>
      <% @workouts.each do |w| %>
        <%= link_to w do %>
          <li><%= w.title %>, Mood: <%= w.mood %> and I workout out for <%= w.length %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% else %>
  <h4>You should try creating a new workout.</h4>
  <h3><%= link_to "Start Here", new_workout_path %></h3>
<% end %>
