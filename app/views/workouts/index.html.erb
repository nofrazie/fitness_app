<% provide(:title, "Workouts") %>

<!-- MAIN PAGE CONTENT -->
<div class="row">
  <h1 class="page-header">Workouts</h1>
  <%= link_to "Create New Workout", new_workout_path, class: "btn btn-primary" %>

  <% if @workouts.any? %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Mood</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        <% @workouts.each do |workout| %>
          <tr>
            <td><%= workout.date.strftime("%B %e, %Y") %></td>
            <td><%= link_to workout.title, workout %></td>
            <td><%= workout.mood %></td>
            <td><%= workout.begin.strftime("%l:%M %p") %></td>
            <td><%= workout.end.strftime("%l:%M %p") %></td>
            <td><%= workout.workout_type.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4>You should try creating a new workout.</h4>
    <h3><%= link_to "Start Here", new_workout_path %></h3>
  <% end %>
</div>
