<% provide(:title, @exercise.name) %>

<div class="row">
  <h1><%= @exercise.name %>  <span><%= link_to "Edit", edit_workout_exercise_path(@workout, @exercise), class: "btn btn-default" %></span></h1>

  <%= link_to "New Set", new_workout_exercise_set_path(@workout, @exercise), class: "btn btn-primary" %>
  <br>

  <table class="table-bordered">
    <thead>
      <tr>
        <th>Number</th>
        <th>Reps</th>
        <th>Weight</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @sets %>
    </tbody>
  </table>

  <%= link_to "delete", workout_exercise_path(@workout, @exercise), method: :delete, data: { confirm: "Are you sure you want to delete this exercise?" } %>
</div>
