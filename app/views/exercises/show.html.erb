<% provide(:title, @exercise.name) %>

<div class="row">
  <div class="col-md-8">
    <h1><%= @exercise.name %>  <span><%= link_to "Edit", edit_workout_exercise_path(@workout, @exercise), class: "btn btn-default" %></span></h1>

    <%= link_to "New Set", new_workout_exercise_set_path(@workout, @exercise), class: "btn btn-primary" %>
    <br>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Number</th>
          <th>Reps</th>
          <th>Weight</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @sets %>
      </tbody>
    </table>

    <%= link_to "Delete Exercise", workout_exercise_path(@workout, @exercise), method: :delete, data: { confirm: "Are you sure you want to delete this exercise? It will also delete every set that has been created for it." } %>
  </div>

  <div class="col-md-4">

  </div>
</div>
